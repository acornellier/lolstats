generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Match {
  id           Int           @id
  participants Participant[]
}

model Participant {
  championKey    Int
  matchId        Int
  mythic         Int?
  participantId  Int
  position       Position
  win            Boolean
  items          Int[]
  primaryRunes   Int[]
  secondaryRunes Int[]
  skills         Int[]
  spells         Int[]
  startingItems  Int[]
  statRunes      Int[]
  match          Match    @relation(fields: [matchId], references: [id])

  @@id([matchId, participantId])
  @@index([items])
  @@index([matchId])
}

enum Position {
  TOP
  JUNGLE
  MIDDLE
  BOTTOM
  SUPPORT
}
